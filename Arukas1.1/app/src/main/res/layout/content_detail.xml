<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xbw.arukas.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp">

            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Status"
                android:id="@+id/tv_status"
                app:fontFamily="Muli-Light.ttf"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/switch1"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Last update: "
                app:fontFamily="Muli-Regular.ttf"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_update"
                app:fontFamily="Muli-Light.ttf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:layout_centerVertical="true"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_id"
                app:fontFamily="Muli-Light.ttf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Name"
                android:id="@+id/t6"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_appname"
                app:fontFamily="Muli-Light.ttf"
                android:layout_marginRight="0dp"
                android:layout_below="@+id/t6"
                android:gravity="left" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image	"
                android:id="@+id/t5"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_image"
                app:fontFamily="Muli-Light.ttf"
                android:layout_marginRight="0dp"
                android:layout_below="@+id/t5"
                android:gravity="left" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instances"
                android:layout_centerVertical="true"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_instances"
                app:fontFamily="Muli-Light.ttf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:layout_centerVertical="true"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_memory"
                app:fontFamily="Muli-Light.ttf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endpoint"
                android:id="@+id/t4"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:id="@+id/tv_endpoint"
                app:fontFamily="Muli-Light.ttf"
                android:layout_below="@+id/t4"
                android:gravity="left" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port"
                android:id="@+id/t1"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:id="@+id/tv_port"
                app:fontFamily="Muli-Light.ttf"
                android:layout_below="@+id/t1"
                android:gravity="left" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENV"
                android:id="@+id/t2"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:id="@+id/tv_env"
                app:fontFamily="Muli-Light.ttf"
                android:layout_below="@+id/t2"
                android:gravity="left" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xbw.arukas.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CMD"
                android:id="@+id/t3"
                app:fontFamily="Muli-Regular.ttf"
                android:textSize="22sp"/>
            <com.xbw.arukas.CustomTextView
                android:layout_marginRight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cmd"
                app:fontFamily="Muli-Light.ttf"
                android:layout_below="@+id/t3"
                android:gravity="left" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"  />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/Btn_ssh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="SSH Console"
                    android:background="@drawable/btn_innew"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:id="@+id/Linear_qrcode"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/Btn_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="SS二维码"
                    android:visibility="gone"
                    android:background="@drawable/btn_innew"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:id="@+id/Linear_ss"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <EditText
                    android:id="@+id/Btn_ss"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="12dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Shadowsocks"
                    android:visibility="gone"
                    android:background="@drawable/btn_innew"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
